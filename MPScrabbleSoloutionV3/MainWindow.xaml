                <Button x:Name="bntPrtLog" Content="Print Log" Width="100" Margin="10" Click="bntPrtLog_Click" ToolTip="Will print a log of the game." />
                <Button x:Name="bntReset" Content="Reset" Width="100" Margin="10" Click="bntReset_Click" ToolTip="Press to start a new game" />
            </StackPanel>
