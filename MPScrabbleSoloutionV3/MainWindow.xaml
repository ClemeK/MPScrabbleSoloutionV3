        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- How Many Players -->
        <StackPanel Grid.Column="0" Margin="10 15">
            <StackPanel Orientation="Horizontal">
                <Label Content="How many Players?" FontWeight="Bold" />
                <RadioButton GroupName="PlayerNbr" x:Name="rbPN2" Margin="5 5 0 0" Content="2" Click="rbPlayerNbr_Click" IsChecked="True" />
                <RadioButton GroupName="PlayerNbr" x:Name="rbPN3" Margin="5 5 0 0" Content="3" Click="rbPlayerNbr_Click" />
                <RadioButton GroupName="PlayerNbr" x:Name="rbPN4" Margin="5 5 0 0" Content="4" Click="rbPlayerNbr_Click" />
                <Button x:Name="btnInfo" Margin="5 0 0 0" BorderBrush="White" Background="White" Click="btnInfo_Click" ToolTip="Read Me">
                    <fa:ImageAwesome Icon="InfoCircle" Width="20" />
                </Button>
            </StackPanel>
            <!-- Which one am I -->
            <StackPanel Orientation="Horizontal" Margin="0 15">
                <Label Content="Which Player are You?" FontWeight="Bold" />
                <RadioButton GroupName="CurrentPlayer" x:Name="rbCP1" Margin="4 5 0 0" Content="1" IsChecked="True" Click="rbCurrentPlayer_Click" />
                <RadioButton GroupName="CurrentPlayer" x:Name="rbCP2" Margin="4 5 0 0" Content="2" Click="rbCurrentPlayer_Click" />
                <RadioButton GroupName="CurrentPlayer" x:Name="rbCP3" Margin="4 5 0 0" Content="3" Click="rbCurrentPlayer_Click" />
                <RadioButton GroupName="CurrentPlayer" x:Name="rbCP4" Margin="4 5 0 0" Content="4" Click="rbCurrentPlayer_Click" />
            </StackPanel>

            <!-- Random Numbers -->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnGenerate" Content="Generate" FontWeight="Bold" Width="75" Height="26" Click="btnGenerate_Click" ToolTip="Press to generate random numbers" />
                <TextBox x:Name="lbS00" Text="0" Margin="5 0 0 0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBox x:Name="lbS01" Text="0" Margin="1 0 0 0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBox x:Name="lbS02" Text="0" Margin="1 0 0 0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
