            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Letter Bag" FontWeight="Bold" />
                <Label x:Name="lbBagCount" Content="(100)" />
            </StackPanel>
            <TextBox x:Name="tbBag" Height="155" Width="240" FontFamily="Courier New" />
