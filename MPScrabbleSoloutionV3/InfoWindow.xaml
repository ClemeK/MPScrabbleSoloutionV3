<Window x:Class="MPScrabbleSoloutionV3.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPScrabbleSoloutionV3"
        mc:Ignorable="d"
        Title="Information" Height="550" Width="800" WindowStartupLocation="CenterScreen">
    
    <StackPanel>
        <Label Content="MP Scrabble Solution" FontWeight="Black" HorizontalContentAlignment="Center"/>
        <RichTextBox x:Name="rtbInfoBox" IsReadOnly="True" FontFamily="Calibri" FontSize="12" VerticalScrollBarVisibility="Visible"/>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Center" Width="75" Click="btnClose_Click"/>
    </StackPanel>
</Window>
